<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<configuration>
		<custom-converters>
			<converter type="com.mrprez.roborally.server.MoveConverter">
				<class-a>com.mrprez.roborally.model.move.Move</class-a>
				<class-b>com.mrprez.roborally.shared.animation.MoveAnimation</class-b>
			</converter>
		</custom-converters>
	</configuration>
	
	
	<mapping>
		<class-a>com.mrprez.roborally.model.Game</class-a>
		<class-b>com.mrprez.roborally.shared.GameGwt</class-b>
	</mapping>

	<mapping>
		<class-a>com.mrprez.roborally.model.board.GameBoard</class-a>
		<class-b>com.mrprez.roborally.shared.GameBoardGwt</class-b>
		<field-exclude>
			<a>squares</a>
			<b>squares</b>
		</field-exclude>
		<field>
			<a>startSquare.x</a>
			<b>startX</b>
		</field>
		<field>
			<a>startSquare.y</a>
			<b>startY</b>
		</field>
	</mapping>

	<mapping>
		<class-a>com.mrprez.roborally.model.Robot</class-a>
		<class-b>com.mrprez.roborally.shared.RobotGwt</class-b>
		<field>
			<a>square.x</a>
			<b>x</b>
		</field>
		<field>
			<a>square.y</a>
			<b>y</b>
		</field>
	</mapping>

	<mapping>
		<class-a>com.mrprez.roborally.model.Round</class-a>
		<class-b>com.mrprez.roborally.shared.RoundGwt</class-b>
	</mapping>
	<mapping>
		<class-a>com.mrprez.roborally.model.Turn</class-a>
		<class-b>com.mrprez.roborally.shared.TurnGwt</class-b>
	</mapping>
	<mapping>
		<class-a>com.mrprez.roborally.model.Step</class-a>
		<class-b>com.mrprez.roborally.shared.StepGwt</class-b>
	</mapping>

</mappings> 
      