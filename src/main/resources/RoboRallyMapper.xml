<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mrprez.roborally.model">
	<resultMap id="userResultMap" type="com.mrprez.roborally.model.User">
		<id property="username" column="USERNAME" />
	</resultMap>

	<select id="checkUser" resultMap="userResultMap">
		select USERNAME from USER where
		USERNAME=#{username} and PASSWORD=#{password}
	</select>
	<select id="selectUserGameBoards" resultMap="gameBoard">
		select BOARD.ID, NAME, SIZE_X, SIZE_Y
		from GAME_BOARD
		join BOARD on BOARD.ID=GAME_BOARD.ID
		where OWNER=#{username}
	</select>
</mapper>