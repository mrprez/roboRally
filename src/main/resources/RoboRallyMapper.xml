<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mrprez.roborally.model">
	<resultMap id="userResultMap" type="com.mrprez.roborally.model.User">
		<id property="username" column="USERNAME" />
	</resultMap>
	<resultMap id="game" type="com.mrprez.roborally.model.Game">
		<id property="id" column="ID" />
		<result property="name" column="NAME" />
		<collection property="robotList">
			
		</collection>
	</resultMap>

	<select id="checkUser" resultMap="userResultMap">
		select USERNAME from USER where
		USERNAME=#{username} and PASSWORD=#{password}
	</select>
	<select id="selectUserGames" resultMap="game">
		select ID, NAME from GAME where OWNER=#{username}
	</select>
	<select id="selectGame" resultMap="game">
		select ID, NAME
		from GAME
		join BOARD on GAME.BOARD_ID=BOARD.ID
		join SQUARE on BOARD.IDSQUARE.BOARD_ID
		where GAME.ID=#{id}
	</select>
</mapper>