<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mrprez.roborally.model">
	<resultMap id="userResultMap" type="com.mrprez.roborally.model.User">
		<id property="username" column="USERNAME" />
	</resultMap>
	<resultMap id="game" type="com.mrprez.roborally.model.Game">
		<id property="id" column="ID" />
		<result property="name" column="NAME" />
	</resultMap>
	<resultMap id="card" type="com.mrprez.roborally.model.Card">
		<constructor>
			<idArg column="RAPIDITY" javaType="int"/>
			<arg column="TRANSLATION" javaType="int"/>
			<arg column="ROTATION" javaType="int"/>
		</constructor>
	</resultMap>
	<resultMap id="gameBoard" type="com.mrprez.roborally.dto.GameBoardDto">
		<result property="boardId" column="BOARD_ID" />
		<result property="name" column="NAME" />
		<result property="sizeX" column="SIZE_X" />
		<result property="sizeY" column="SIZE_Y" />
		<result property="startX" column="START_X" />
		<result property="startY" column="START_Y" />
	</resultMap>
	<resultMap id="square" type="com.mrprez.roborally.dto.SquareDto">
		<result property="x" column="X" />
		<result property="y" column="Y" />
		<result property="clazz" column="CLASS" />
		<result property="args" column="ARGS" />
	</resultMap>
	<resultMap id="robot" type="com.mrprez.roborally.dto.RobotDto">
		<result property="x" column="X" />
		<result property="y" column="Y" />
		<result property="direction" column="DIRECTION" typeHandler="org.apache.ibatis.type.EnumTypeHandler" />
		<result property="health" column="HEALTH" />
	</resultMap>
	<resultMap id="step" type="com.mrprez.roborally.dto.StepDto">
		<result property="roundNb" column="ROUND_NB" />
		<result property="turnNb" column="TURN_NB" />
		<result property="stepNb" column="STEP_NB" />
		<result property="cardRapidity" column="CARD_RAPIDITY" />
		<result property="squareX" column="SQUARE_X" />
		<result property="squareY" column="SQUARE_Y" />
		<collection property="moveList" ofType="com.mrprez.roborally.dto.MoveDto" >
			<result property="robotNb" column="ROBOT_NB" />
			<result property="translation" column="TRANSLATION" typeHandler="org.apache.ibatis.type.EnumTypeHandler" />
			<result property="rotation" column="ROTATION" />
		</collection>
	</resultMap>

	<select id="checkUser" resultMap="userResultMap">
		select USERNAME from ACCOUNT where
		USERNAME=#{username} and PASSWORD=#{password}
	</select>
	<select id="selectUserGames" resultMap="game">
		select ID, NAME from GAME where OWNER=#{username}
	</select>
	<select id="selectGame" resultMap="gameBoard">
		select GAME.BOARD_ID,NAME,SIZE_X,SIZE_Y,START_X,START_Y from GAME
		join BOARD on BOARD.ID=GAME.BOARD_ID
		where GAME.ID=#{id}
	</select>
	<select id="selectSquareList" resultMap="square">
		select X,Y,CLASS,ARGS from SQUARE where BOARD_ID=#{boardId}
	</select>
	<select id="selectRobotList" resultMap="robot">
		select NUMBER,X,Y,DIRECTION,HEALTH from ROBOT where GAME_ID=#{gameId}
	</select>
	<select id="selectHandCardList" resultMap="card">
		select RAPIDITY,TRANSLATION,ROTATION from CARD
		join ROBOT on CARD.ROBOT_NB=ROBOT.NUMBER and CARD.GAME_ID=ROBOT.GAME_ID
		where GAME_ID=#{gameId} and ROBOT.USER_NAME=#{username}
	</select>
	<select id="selectStepList" resultMap="step">
		select STEP.ROUND_NB, STEP.TURN_NB, STEP.STEP_NB, STEP.CARD_RAPIDITY, STEP.SQUARE_X, STEP.SQUARE_Y, 
			MOVE.NUMBER, MOVE.ROBOT_NB, MOVE.ROTATION, MOVE.TRANSLATION
		from STEP
		left join MOVE on  STEP.GAME_ID=MOVE.GAME_ID and STEP.ROUND_NB=MOVE.ROUND_NB and STEP.TURN_NB=MOVE.TURN_NB and STEP.STEP_NB=MOVE.STEP_NB 
		where STEP.GAME_ID=#{gameId}
		order by STEP.ROUND_NB, STEP.TURN_NB, STEP.STEP_NB, MOVE.NUMBER asc
	</select>
</mapper>